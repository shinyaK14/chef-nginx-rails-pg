{
  "authorization": {
    "sudo": {
      "users": ["deploy"]
    }
  },
  "localegen": {
    "lang": ["en_US.UTF-8", "ru_RU.UTF-8"]
  },
  "newrelic": {
    "license_key": "nr_key",
    "hostname": "node.host.name"
  },
  "nginx":{
    "upstream": {
      "server_name": "node.host.name",
      "app_name": "node",
      "run_user": "deploy",
      "name": "node_prod"
    }
  },
  "rvm": {
    "user_installs": [
      {
        "user": "deploy",
        "default_ruby": "2.1.1",
        "rubies": ["2.1.1"]
      }
    ]
  },
  "postgresql": {
    "version": "9.2",
    "pg_hba": [
      { "type": "local", "db": "all", "user": "postgres", "addr": "",             "method": "peer" },
      { "type": "local", "db": "all", "user": "all",      "addr": "",             "method": "peer" },
      { "type": "host",  "db": "all", "user": "all",      "addr": "127.0.0.1/32", "method": "md5" },
      { "type": "host",  "db": "all", "user": "all",      "addr": "::1/128",      "method": "md5" }
    ]
  },
  "run_list": [
    "role[server]",
    "role[nginx]",
    "role[postgres-server]",
    "role[rails-app]"
  ]
}
